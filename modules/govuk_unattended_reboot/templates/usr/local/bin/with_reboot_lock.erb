#!/usr/bin/env bash

set -eu

lock_file_name="$1"
lock_file="<%= @lock_dir %>/$lock_file_name"

function lock() {
  while [ -f $lock_file ]; do
    sleep 30
    echo "waiting for $lock_file to be released..."
  done
  touch $lock_file
}

function unlock() {
  rm -f $lock_file
}

lock
trap "unlock" EXIT

shift # Remove the lock file name from the arguments

"${@}"
