---
- job:
    name: mongo_data_sync 
    display-name: Mongo Data-Sync Job
    project-type: freestyle
    description: |
            This job will perform a mongo data-sync.
    properties:
      - build-discarder:
          num-to-keep: 30
    builders:
      - shell: |
          #!/usr/bin/env bash
          set -x

          # Create an array of mongo cluster members.
          members=$(govuk_node_list -c mongo)

          # Iterate over the array.
          # If the member is a master, then intiate data-sync.
          for member in ${members[@]}; do
            if $(ssh deploy@${member} "mongo --quiet --host "$member" --eval 'rs.isMaster().ismaster'"); then
              ssh deploy@${member} "/usr/local/bin/with_reboot_lock /usr/bin/envdir /etc/govuk_env_sync/env.d /usr/local/bin/govuk_env_sync.sh -f /etc/govuk_env_sync/pull_api_mongo_daily.cfg"

              # Exit once completed.
              exit $EXITCODE
            fi
          done
    wrappers:
      - ansicolor:
          colormap: xterm
    logrotate:
        numToKeep: 10
